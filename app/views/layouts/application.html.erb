<!DOCTYPE html>
<html>
<head>
 	<!-- Title feeding off of the PROVIDE method on each partial -->
  <title>
  	<%= full_title(yield(:title)) %>
  </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<%= render 'layouts/header' %>
	
	<section class="container">
		<%= yield %>
	</section>

	<%= render 'layouts/footer' %>

	<!-- DEBUG with Rails and only show in DEV ENV -->
	<div class="debug-dump"><%= debug(params) if Rails.env.development? %></div>

</body>
</html>
